{
  "name": "prismo",
  "displayName": "Prismo",
  "description":
    "An extension to help you beautify the separators in your source code.",
  "version": "0.0.1",
  "publisher": "guywaldman",
  "engines": {
    "vscode": "^1.17.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:extension.prismo",
    "onCommand:extension.prismo-light",
    "onCommand:extension.prismo-hair"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.prismo",
        "title": "Prismo: Decorate"
      },
      {
        "command": "extension.prismo-light",
        "title": "Prismo: Decorate (Light)"
      },
      {
        "command": "extension.prismo-hair",
        "title": "Prismo: Decorate (Hair)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Prismo configuration",
      "properties": {
        "prismo.padding": {
          "type": "number",
          "default": 2,
          "description": "Padding between title and comment pattern."
        },
        "prismo.dash": {
          "type": "string",
          "default": "-",
          "description": "Character to be used as the repeating dash pattern."
        },
        "prismo.shouldUppercase": {
          "type": "boolean",
          "default": true,
          "description": "Whether title should be uppercased"
        },
        "prismo.light": {
          "type": "object",
          "description":
            "Options for the 'light' decoration variation. Options are identical to top-level ones, except commentsPattern. See docs for more info.",
          "properties": {
            "padding": {
              "type": "number",
              "description": "Padding between title and comment pattern."
            },
            "dash": {
              "type": "string",
              "description":
                "Character to be used as the repeating dash pattern."
            },
            "shouldUppercase": {
              "type": "boolean",
              "description": "Whether title should be uppercased"
            },
            "width": {
              "type": "number",
              "description":
                "Width of ruler for subtitle. Use 0 for full width (until ruler)"
            }
          },
          "default": {
            "padding": 1,
            "dash": "-",
            "shouldUppercase": false,
            "width": 40
          }
        },
        "prismo.hair": {
          "type": "object",
          "properties": {
            "padding": {
              "type": "number",
              "description": "Padding between title and comment pattern."
            },
            "dash": {
              "type": "string",
              "description":
                "Character to be used as the repeating dash pattern."
            },
            "shouldUppercase": {
              "type": "boolean",
              "description": "Whether title should be uppercased"
            },
            "width": {
              "type": "number",
              "description":
                "Width of ruler for subtitle. Use 0 for full width (until ruler)"
            }
          },
          "default": {
            "padding": 1,
            "width": 30,
            "dash": "-",
            "shouldUppercase": false
          },
          "description":
            "Options for the 'hair' decoration variation. Options are identical to top-level ones, except commentsPattern. See docs for more info."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "eslint": "^4.8.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-typescript": "^0.8.0",
    "immutable": "^3.8.2",
    "typescript": "^2.5.3",
    "typescript-eslint-parser": "^8.0.0",
    "vscode": "^1.1.5"
  },
  "dependencies": {}
}
